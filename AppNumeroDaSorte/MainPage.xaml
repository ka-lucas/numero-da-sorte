<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppNumeroDaSorte.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MainPage"
    BackgroundColor="White">

    <ScrollView HorizontalOptions="Center" VerticalOptions="Center">
        <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
            <Image
                HeightRequest="115"
                Source="logo_green.png"
                WidthRequest="74" />
            <Label
                x:Name="NameApp"
                Margin="0,20,0,120"
                HorizontalOptions="Center"
                Text="Número da Sorte"
                TextColor="#00AB37"
                VerticalOptions="Center" />
            <VerticalStackLayout x:Name="ContainerLuckNumbers" IsVisible="False">
                <Label
                    Margin="0,20,0,0"
                    HorizontalOptions="Center"
                    Text="O número da sorte é:"
                    TextColor="Black" />
                <HorizontalStackLayout
                    Margin="0,70"
                    HorizontalOptions="Center"
                    Spacing="5">
                    <Border
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8"
                        VerticalOptions="Center">
                        <Label
                            x:Name="LuckNumber01"
                            FontSize="24"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8"
                        VerticalOptions="Center">
                        <Label
                            x:Name="LuckNumber02"
                            FontSize="24"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8"
                        VerticalOptions="Center">
                        <Label
                            x:Name="LuckNumber03"
                            FontSize="24"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8"
                        VerticalOptions="Center">
                        <Label
                            x:Name="LuckNumber04"
                            FontSize="24"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8"
                        VerticalOptions="Center">
                        <Label
                            x:Name="LuckNumber05"
                            FontSize="24"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                    <Border
                        Padding="10,5"
                        HorizontalOptions="Center"
                        Stroke="#00AB37"
                        StrokeShape="RoundRectangle 8"
                        VerticalOptions="Center">
                        <Label
                            x:Name="LuckNumber06"
                            FontSize="24"
                            Text=""
                            TextColor="#00AB37" />
                    </Border>
                </HorizontalStackLayout>
                <Label
                    Margin="0,0,0,50"
                    HorizontalOptions="Center"
                    Text="Boa sorte!"
                    TextColor="Black" />
            </VerticalStackLayout>
            <Button
                Clicked="OnGenerateLuckNumbers"
                HorizontalOptions="Center"
                Text="Gerar Número da Sorte" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>